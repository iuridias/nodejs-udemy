<h1>Editando {{user.name}}:</h1>
<form action="/users/update" method="POST" class="form">
  <input type="hidden" name="id" value="{{user.id}}">
  <div class="form-control">
    <label for="name">Nome:</label>
    <input type="text" name="name" id="name" placeholder="Digite o nome do usuário" value="{{user.name}}">
  </div>
  <div class="form-control">
    <label for="occupation">Profissão:</label>
    <input type="text" name="occupation" id="occupation" placeholder="Digite a profissão" value="{{user.occupation}}">
  </div>
  <div class="form-control form-checkbox">
    {{#if user.newsletter}}
    <input type="checkbox" name="newsletter" id="newsletter" checked>
    {{else}}
    <input type="checkbox" name="newsletter" id="newsletter">
    {{/if}}
    <label for="newsletter">Enviar promoções?</label>
  </div>
  <input type="submit" value="Editar" class="botao">
</form>
<div class="address-container">
  <h2>Endereços</h2>
  <form action="/address/create" method="POST">
    <input type="hidden" name="UserId" value="{{user.id}}">
    <div class="form-control">
      <label for="street">Rua:</label>
      <input type="text" name="street" id="street" placeholder="Digite a rua">
    </div>
    <div class="form-control">
      <label for="number">Número:</label>
      <input type="text" name="number" id="number" placeholder="Digite o número">
    </div>
    <div class="form-control">
      <label for="city">Cidade:</label>
      <input type="text" name="city" id="city" placeholder="Digite a cidade">
    </div>
    <input type="submit" value="Incluir Endereço" class="botao">
  </form>
  <div class="address-list">
    <h2>Lista de endereços:</h2>
    {{#each user.Adresses}}
    <div>
      <p>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}</p>
      <form action="/address/delete" method="POST">
        <input type="hidden" name="UserId" value="{{this.UserId}}">
        <input type="hidden" name="id" value="{{this.id}}">
        <input type="submit" value="Excluir" class="botao botao-remove botao-remove-address">
      </form>
    </div>
    {{/each}}
  </div>
</div>